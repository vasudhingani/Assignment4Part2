<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vasu.assignment4part2.MainActivity">


    <TextView
        android:id="@+id/synonym_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:text="Find Synonym"
        android:textColor="#af0c0c"
        android:textSize="35sp" />


    <EditText
        android:id="@+id/word_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/synonym_input"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="36dp"
        android:layout_marginVertical="33dp"
        android:hint="Enter the Word here"
        android:textColorHint="#010675"
        android:textAlignment="center" />

    <Button
        android:id="@+id/submit_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/submit_synonym"
        android:layout_alignBottom="@+id/submit_synonym"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/submit_synonym"
        android:layout_toStartOf="@+id/submit_synonym"
        android:backgroundTint="#ff9282"
        android:onClick="enterValue"
        android:text="Enter Values" />

    <Button
        android:id="@+id/submit_synonym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/word_input"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="#ff9282"
        android:text="Find Synonym" />

    <TextView
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:inputType="textPersonName"
        android:text="Welcome to the Synonym Finder! "
        android:textColor="#0d10c4"
        android:textSize="25dp"
        android:textStyle="bold"
        />


</RelativeLayout>

