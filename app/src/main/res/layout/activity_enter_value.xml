<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vasu.assignment4part2.EnterValue">


    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="354dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.404">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:text="Find Value"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TextView"
            android:textSize="27dp"
            android:visibility="visible"
            android:textColor="#22660e"/>

        <EditText
            android:id="@+id/TFWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="22dp"
            android:layout_marginVertical="20dp"
            android:inputType="textPersonName"
            android:hint="Type the Actual Word" />

        <EditText
            android:id="@+id/TFSynonym"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="22dp"
            android:layout_marginVertical="10dp"
            android:inputType="textPersonName"
            android:hint="Type the Synonym of the Word" />

        <Button
            android:id="@+id/button6"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="25dp"
            android:backgroundTint="#ff9282"
            android:text="Enter" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>



